@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>汽修系统 | 登陆</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Style/login/login.css" rel="stylesheet" />
    <style>
    </style>
</head>
<body class="body">
    <header>
        <ul>
            <li>
                <a href="#" id="help"><img src="~/Content/img/login/help_normal.png">&nbsp;&nbsp;帮助</a>
            </li>
            <li>
                <a id="showAbout" href="#"><img src="~/Content/img/login/about_normal.png">&nbsp;&nbsp;关于</a>
            </li>
        </ul>
    </header>
    <main>
        <img class="loginbgyun" src="~/Content/img/login/bgyun.png" />
        <div class="loginform">
            <div class="left">
                <img src="~/Content/img/login/washcar.png" />
            </div>
            <div class="right">
                <form id="loginForm" method="post" action="">
                    <div class="logo text-center">
                        <img src="~/Content/img/login/logo.jpg" />
                    </div>
                    <div class="form-group">
                        <i class="input-icon glyphicon glyphicon-user"></i>
                        <input id="userName" name="userName" type="text" class="form-control" placeholder="请输入用户名">
                        <label for="userName" class="validate-error error">账户不能为空</label>
                    </div>
                    <div class="form-group">
                        <i class="input-icon glyphicon glyphicon-lock"></i>
                        <input id="userPwd" name="userPwd" type="password" class="form-control" placeholder="请输入密码">
                        <label for="userPwd" class="validate-error error">密码不能为空</label>
                    </div>
                    <div class="otherError">
                        <span>账户或密码错误</span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-block" id="login" value="登录">
                    </div>
                </form>
            </div>
        </div>
    </main>
    <footer></footer>
    <script>
        var loginUrl = "@Url.Action("Login", "Account")";
        var returnUrl = "@TempData["returnUrl"]";
        var defaultReturnUrl = "@Url.Action("Index","Home")";
    </script>
    <script>
    $().ready(function() {
        $("#loginForm").validate({
            rules: {
                userName: "required",
                userPwd: "required"
            },
            messages: {
                userName: "账户不能为空",
                userPwd: "密码不能为空"
            },
            submitHandler: function(form) {
                $(".otherError").hide();
                $.ajax({
                    url: loginUrl,
                    type:"POST",
                    dataType: "json",
                    contentType: "application/json",
                    data: JSON.stringify({
                        userName: $("#userName").val().trim(),
                        userPwd: $("#userPwd").val().trim()
                    }),
                    success: function (res) {
                        if (res.success) {
                            window.location.href = returnUrl || defaultReturnUrl;
                        } else {
                            $(".otherError span").html(res.message).parent().show();
                        }
                    },
                    error: function() {}
                });
            }
        });
    });
    </script>
</body>
</html>